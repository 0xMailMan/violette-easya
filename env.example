# Violette EasyA Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=8000
LOG_LEVEL=info

# Firebase Configuration
FIREBASE_PROJECT_ID=violette-easya
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"violette-easya",...}

# XRPL Blockchain Configuration
XRPL_NETWORK_URL=wss://s.altnet.rippletest.net:51233
# For mainnet: wss://xrplcluster.com

# AI Services Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
DEFAULT_AI_MODEL=claude-3-5-sonnet-20241022

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
COMPRESSION_QUALITY=80

# Database Configuration (if using additional databases)
# REDIS_URL=redis://localhost:6379
# POSTGRES_URL=postgresql://user:password@localhost:5432/violette

# Monitoring & Analytics
# SENTRY_DSN=your-sentry-dsn-here
# ANALYTICS_API_KEY=your-analytics-key-here

# Development Tools
# ENABLE_SWAGGER=true
# ENABLE_DEBUG_LOGS=true

# Frontend Configuration
NEXT_PUBLIC_AI_SERVER_URL=http://localhost:8000 